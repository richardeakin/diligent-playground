struct PSInput { 
    float4 Pos   : SV_POSITION; 
    float2 UV  : TEX_COORD; 
    float  NdotL : N_DOT_L;
};

struct PSOutput { 
    float4 Color : SV_TARGET; 
};

void main( in PSInput PSIn, out PSOutput PSOut )
{
    float lighting = PSIn.NdotL * 0.8 + 0.1;
    float3 col = float3( 1, 1, 1 ) * lighting;


    // TODO NEXT: lambert shading
    //PSOut.Color.r = PSIn.UV.x;
    //PSOut.Color.g = PSIn.UV.y;
    //PSOut.Color.b = 0;
    PSOut.Color = float4( col.r, col.g, col.b, 1.0 );
}
