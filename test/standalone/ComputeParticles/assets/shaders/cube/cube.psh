struct PSInput { 
    float4 Pos   : SV_POSITION; 
    float2 UV  : TEX_COORD; 
};

struct PSOutput { 
    float4 Color : SV_TARGET; 
};

void main( in PSInput PSIn, out PSOutput PSOut )
{
    // TODO NEXT: lambert shading
    PSOut.Color.r = PSIn.UV.x;
    PSOut.Color.g = PSIn.UV.y;
    PSOut.Color.b = 0;
    PSOut.Color.a = 1;
}
